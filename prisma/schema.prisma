datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Note {
    id String @id @default(uuid())
    title String
    content String
    cards String[]
    userid String @db.Uuid()
    todo String[]
}

model Quiz {
    id String @id @db.Uuid @default(uuid())
    date DateTime
    questions String[]
    responses String[]
    answers String[]
    graded Boolean
    userid String @db.Uuid()
}

enum QuestionType {
    OPEN_ENDED
    MULTIPLE_CHOICE
}

