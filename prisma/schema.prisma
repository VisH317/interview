generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id      String   @id @default(uuid())
  title   String
  content String
  cards   String[]
  userid  String   @db.Uuid
  todo    String[]
  desc    String   @default("\"\"")
}

model Quiz {
  id        String   @id @default(uuid()) @db.Uuid
  date      DateTime
  questions String[]
  responses String[]
  answers   String[]
  graded    Boolean
  userid    String   @db.Uuid
  grade     Int?
}

model User {
  id String @unique @db.Uuid
  upgraded Boolean
}

model Flashcard {
  id     String   @id @default(uuid()) @db.Uuid
  userid String   @db.Uuid
  cards  String[]
}

enum QuestionType {
  OPEN_ENDED
  MULTIPLE_CHOICE
}
